  </interface>

  <script uri="./SpBase.bs" />

  <children>
    <Group>
        <SpNativeText id="screen-title" componentName="SimpleLabel"/>
    </Group>
    
    <LayoutGroup id="col-layout" layoutDirection="horiz" itemSpacings="[0]">
        <LayoutGroup id="col-left" horizAlignment="center" layoutDirection="vert" itemSpacings="[20]">
