<component name = "SpBase" extends = "Group">

  <interface>
        <field id="message" type="assocarray" />
        <field id="messageMetadata" type="assocarray" />
        <field id="view" type="assocarray" />
        <field id="viewDataExtra" type="assocarray" />

        <field id="privacyManagerViewTask" type="node" />
        <field id="privacyManagerViewData" type="assocarray" />
