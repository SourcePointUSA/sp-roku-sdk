<?xml version = "1.0" encoding = "utf-8" ?>

<component name = "RequestTask" extends = "Task" >

  <interface>
    <field id="resetOnError" type="boolean" value="true" />

    <!-- updated for request -->
    <field id="url" type="string" />
    <field id="accountId" type="integer" />
    <field id="authId" type="string" />
    <field id="campaignEnv" type="string" />
    <field id="consentLanguage" type="string" />
    <field id="clientMMSOrigin" type="string" />
    <field id="propertyHref" type="string" />
    <field id="pubData" type="assocarray" />
    <field id="requestUUID" type="string" />
    
    <!-- updated in both directions -->
    <field id="localState" type="string" />

    <!-- updated by response -->
    <field id="error" type="string" />
  </interface>

  <script uri="./RequestTask.bs" />

</component>
