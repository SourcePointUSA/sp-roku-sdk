{
  "ropm": {
    "rootDir": "dist"
  },
  "name": "sp-roku-sdk",
  "description": "SP SDK for ROKU.",
  "version": "2.0.0",
  "main": "index.js",
  "scripts": {
    "compile": "bsc --staging-folder-path dist --root-dir src --create-package false --retain-staging-folder true",
    "develop": "bsc --watch --deploy --host $ROKU_DEV_HOST --password $ROKU_DEV_PASSWORD",
    "test": "bsc && jest --verbose ./tests/cases"
  },
