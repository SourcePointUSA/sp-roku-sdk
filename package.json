  "bugs": {
    "url": "https://github.com/SourcePointUSA/sp-roku-sdk/issues"
  },
  "homepage": "https://github.com/SourcePointUSA/sp-roku-sdk#readme",
  "dependencies": {
    "brighterscript": "^0.39.3"
  },
  "devDependencies": {
    "axios": "0.19.1",
    "form-data": "3.0.0",
    "jest": "^27.0.6"
  }
}
